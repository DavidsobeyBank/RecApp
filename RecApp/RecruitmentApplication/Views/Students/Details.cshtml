@model RecruitmentApplication.Models.Student

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="mdl-grid">
    <div class="mdl-card mdl-shadow--4dp demo-card-square">
        <div class="mdl-card__title mdl-shadow--2dp">
            <h2 class="mdl-card__title-text">Student: @Html.DisplayFor(model => model.StudentName) @Html.DisplayFor(model => model.StudentSurname)</h2>
        </div>
        <div class="">
            <div class="mdl-card__title mdl-card--expand"></div>
            <div>
                <img class="demo-card-image img" src="/Img/@Html.DisplayFor(model => model.StudentPhoto)" />
            </div>
        </div>
    </div>
    <div class="mdl-card mdl-shadow--4dp demo-card-square">
        <div class="mdl-card__title mdl-shadow--2dp">
            <h2 class="mdl-card__title-text">Details</h2>
        </div>
        <div class="mdl-card__supporting-text ">
            <strong>Name: </strong>
            @Html.DisplayFor(model => model.StudentName)
            @Html.DisplayFor(model => model.StudentSurname)<br>
            <strong>Degree:</strong>
            @Html.DisplayFor(model => model.StudentDegree)<br />
            <strong>University:</strong>
            @Html.DisplayFor(model => model.StudentUniversity)<br />
            <strong>Year of Studies:</strong>
            @Html.DisplayFor(model => model.StudentYearofStudy)<br />
        </div>
    </div><div class="mdl-card mdl-shadow--4dp demo-card-square">
        <div class="mdl-card__title mdl-shadow--2dp">
            <h2 class="mdl-card__title-text">Details</h2>
        </div>
        <div class="mdl-card__supporting-text"  style="overflow:auto">
            <strong>Student Bio:</strong> <br>
            @Html.DisplayFor(model => model.StudentBio)<br />
        </div>
    </div>
    <div class="mdl-card mdl-shadow--4dp demo-card-square">
        <div class="mdl-card__title mdl-shadow--2dp">
            <h2 class="mdl-card__title-text">Video</h2>
        </div>
        <div class="">
            <div class="mdl-card__title mdl-card--expand"></div>
            <div class="mdl-card__actions">
                <iframe width="220" height="200" src="@Html.DisplayFor(model => model.StudentVideo)" frameborder="0" allowfullscreen></iframe>
            </div>
        </div>
    </div>
</div>

<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.StudentID }) |
    @Html.ActionLink("Back to List", "Index")
</p>
