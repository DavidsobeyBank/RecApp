@model IEnumerable<RecruitmentApplication.Models.Student>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<button style="width:auto" onclick="location.href = '/Students/Create';" class="mdl-cell mdl-cell--1-col mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect">
    New Student
</button>
<table class="mdl-data-table mdl-js-data-table mdl-shadow--2dp">
    <thead>
        <tr>
            <th class="mdl-data-table__cell--non-numeric" style="text-align:center">Name</th>
            <th style="text-align:center">Surname</th>
            <th style="text-align:center">University</th>
            <th style="text-align:center">Degree</th>
            <th style="text-align:center">Actions</th>
            <th style="text-align:center"></th>
        </tr>
    </thead>
    @foreach (var item in Model)
    {
        <tr>
            <td data-label="Name" class="mdl-data-table__cell--non-numeric left">
                @Html.DisplayFor(modelItem => item.StudentName)
            </td>
            <td data-label="Surname" class="left">
                @Html.DisplayFor(modelItem => item.StudentSurname)
            </td>
            <td data-label="StudentUniversity" class="left">
                @Html.DisplayFor(modelItem => item.StudentUniversity)
            </td>
            <td data-label="StudentDegree" class="left">
                @Html.DisplayFor(modelItem => item.StudentDegree)
            </td>
            <td>
                @Html.ActionLink("View", "Details", new { id = item.StudentID }, new { @class = "mdl-button mdl-button--raised mdl-js-ripple-effect" })
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.StudentID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.StudentID })
            </td>
        </tr>
    }
</table>
