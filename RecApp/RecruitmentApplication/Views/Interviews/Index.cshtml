@model IEnumerable<RecruitmentApplication.Models.Interview>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.InterviewDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Room)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OverallComment)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OverallScore)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.InterviewSession.SessionDescription)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Student.StudentName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.InterviewDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Room)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.OverallComment)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.OverallScore)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.InterviewSession.SessionDescription)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Student.StudentName)
        </td>
        <td>
            @Html.ActionLink("Start", "StartInterview", new { id=item.InterviewID })
            @Html.ActionLink("Edit", "Edit", new { id=item.InterviewID }) |
            @Html.ActionLink("Details", "Details", new { id=item.InterviewID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.InterviewID })
        </td>
    </tr>
}

</table>

@for (int i = 0; i < Model.Count(); i+=2)
{
    <div class="mdl-grid">

        @for (int a = i; a < (i + 2); a++)
        {
        <div class="mdl-card mdl-shadow--4dp demo-card-square">
            <div class="mdl-card__title mdl-shadow--2dp">
                <h2 class="mdl-card__title-text">Interview</h2>
            </div>
            <div class="mdl-card mdl-card__supporting-text">
                <div class="mdl-grid">
                    <div>
                        @Html.DisplayNameFor(model => model.InterviewDate): 
                    </div>
                    <div>
                        @Html.DisplayFor(modelItem => Model.ElementAt(a).InterviewDate)
                    </div>
                </div>
                <div class="mdl-grid">
                    <div>
                        @Html.DisplayNameFor(model => model.InterviewDate): 
                    </div>
                    <div>
                        @Html.DisplayFor(modelItem => Model.ElementAt(a).Room)
                    </div>
                </div>
                <div class="mdl-grid">
                    <div>
                        @Html.DisplayNameFor(model => model.OverallComment): 
                    </div>
                    <div>
                        @Html.DisplayFor(modelItem => Model.ElementAt(a).OverallComment)
                    </div>
                </div>
                <div class="mdl-grid">
                    <div>
                        @Html.DisplayNameFor(model => model.OverallScore): 
                    </div>
                    <div>
                        @Html.DisplayFor(modelItem => Model.ElementAt(a).OverallScore)
                    </div>
                </div>
                <div class="mdl-grid">
                    <div>
                        @Html.DisplayNameFor(model => model.InterviewSession.SessionDescription): 
                    </div>
                    <div>
                        @Html.DisplayFor(modelItem => Model.ElementAt(a).InterviewSession.SessionDescription)
                    </div>
                </div>
                <div class="mdl-grid">
                    <div>
                        @Html.DisplayNameFor(model => model.Student.StudentName): 
                    </div>
                    <div>
                        @Html.DisplayFor(modelItem => Model.ElementAt(a).Student.StudentName)
                    </div>
                </div>

            </div>
            <div class="mdl-card__actions">
                <button class="mdl-button mdl-button--raised" onclick="@Html.ActionLink("Start", "StartInterview", new { id = Model.ElementAt(a).InterviewID })"></button>
            </div>
        </div>
        }
</div>
            
        }

