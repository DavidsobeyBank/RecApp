@model RecruitmentApplication.ViewModels.StartInterviewVM

@{
    ViewBag.Title = "View";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="mdl-grid">
    <div class="mdl-card mdl-shadow--4dp demo-card-square">
        <div class="mdl-card__title mdl-shadow--2dp">
            <h2 class="mdl-card__title-text">Interview with @Html.DisplayFor(model => model.Student.StudentName) @Html.DisplayFor(model => model.Student.StudentSurname)</h2>
        </div>
        <div class="">
            <div class="mdl-card__title mdl-card--expand"></div>
            <div>
                <img class="demo-card-image img" src="@Html.DisplayFor(model => model.Student.StudentPhoto)" />
            </div>
        </div>
    </div>
    <div class="mdl-card mdl-shadow--4dp demo-card-square">
        <div class="mdl-card__title mdl-shadow--2dp">
            <h2 class="mdl-card__title-text">Video</h2>
        </div>
        <div class="">
            <div class="mdl-card__title mdl-card--expand"></div>
            <div class="mdl-card__actions">
                <iframe width="220" height="200" src="@Html.DisplayFor(model => model.Student.StudentVideo)" frameborder="0" allowfullscreen></iframe>
            </div>
        </div>
    </div>
    <div class="mdl-card mdl-shadow--4dp demo-card-square">
        <div class="mdl-card__title mdl-shadow--2dp">
            <h2 class="mdl-card__title-text">Start Interview</h2>
        </div>
        <div class="">
            <div class="mdl-card__actions">
                <h4 class="mdl-card__subtitle-text">Choose Panel Members</h4>
                <div >
                    @Html.ListBoxFor(model => model.selectedEmployeeIDs, Model.panelMembers, new { htmlAttributes = new { @class = "form-control"} })
                </div>
            </div>
            <div>
               <input type="submit" value="Start" class="mdl-button--colored" onclick="location.href=@Html.ActionLink("","StartInterview", "Interviews")" />
            </div>
        </div>
    </div>
</div>
<div class="mdl-grid">

    <div class="mdl-card mdl-shadow--4dp demo-card-large">
        <div class="mdl-card__title mdl-shadow--2dp">
            <h2 class="mdl-card__title-text">Details</h2>
        </div>
        <div class="mdl-card__supporting-text ">
            <strong>Name: </strong>
            @Html.DisplayFor(model => model.Student.StudentName)
             @Html.DisplayFor(model => model.Student.StudentSurname)<br>
           <strong>Date of Birth:</strong>
             @Html.DisplayFor(model => model.dateOfBirth)<br/>
            <strong>Degree:</strong>
             @Html.DisplayFor(model => model.Student.StudentDegree)<br>
            <strong>University:</strong>
            @Html.DisplayFor(model => model.Student.StudentUniversity)
            <strong>Year of Studies:</strong>
             @Html.DisplayFor(model => model.Student.StudentYearofStudy)<br>
            <strong>Student Bio:</strong> <br>
            @Html.DisplayFor(model => model.Student.StudentBio)<br>
        </div>
    </div>
</div>